<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <listener>
        <listener-class>com.nimbits.server.ApplicationListener</listener-class>
    </listener>

    <filter>
        <filter-name>gwtCacheControlFilter</filter-name>
        <filter-class>com.nimbits.server.api.filter.GWTCacheControlFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>gwtCacheControlFilter</filter-name>
        <url-pattern>/nimbits/rpc/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.nimbits.server.api.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/service/v2/*</url-pattern>

    </filter-mapping>



    <filter>
        <filter-name>rest filter</filter-name>
        <filter-class>com.nimbits.server.api.v3.filter.RestApiAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>rest filter</filter-name>
        <url-pattern>/service/v3/rest/*</url-pattern>

    </filter-mapping>
    <servlet>
        <servlet-name>rest api</servlet-name>
        <servlet-class>com.nimbits.server.api.v3.RestApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rest api</servlet-name>
        <url-pattern>/service/v3/rest/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dataTableApi</servlet-name>
        <servlet-class>com.nimbits.server.api.DataTableApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dataTableApi</servlet-name>
        <url-pattern>/service/v2/datatable</url-pattern>
    </servlet-mapping>



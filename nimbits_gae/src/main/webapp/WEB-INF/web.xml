    <servlet>
        <servlet-name>versionApi</servlet-name>
        <servlet-class>com.nimbits.server.api.VersionApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>versionApi</servlet-name>
        <url-pattern>/service/v2/version</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>treeApi</servlet-name>
        <servlet-class>com.nimbits.server.api.TreeApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>treeApi</servlet-name>
        <url-pattern>/service/v2/tree</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>seriesApi</servlet-name>
        <servlet-class>com.nimbits.server.api.SeriesApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>seriesApi</servlet-name>
        <url-pattern>/service/v2/series</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>valueApi</servlet-name>
        <servlet-class>com.nimbits.server.api.ValueApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>valueApi</servlet-name>
        <url-pattern>/service/v2/value/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>batchApi</servlet-name>
        <servlet-class>com.nimbits.server.api.BatchApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>batchApi</servlet-name>
        <url-pattern>/service/v2/batch</url-pattern>
    </servlet-mapping>
    <!--end v2 services-->


    <!--XMPP-->
    <servlet>
        <servlet-name>xmpp</servlet-name>
        <servlet-class>com.nimbits.server.api.xmpp.XMPPReceiverServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>xmpp</servlet-name>
        <url-pattern>/_ah/xmpp/message/chat/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>xmppPresenceAvailable</servlet-name>
        <servlet-class>com.nimbits.server.api.xmpp.XMPPPresenceAvailableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xmppPresenceAvailable</servlet-name>
        <url-pattern>/_ah/xmpp/presence/available/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>xmppPresenceProbe</servlet-name>
        <servlet-class>com.nimbits.server.api.xmpp.XMPPPresenceProbeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xmppPresenceProbe</servlet-name>
        <url-pattern>/_ah/xmpp/presence/probe/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>xmppPresenceUnavailable</servlet-name>
        <servlet-class>com.nimbits.server.api.xmpp.XMPPPresenceUnavailableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xmppPresenceUnavailable</servlet-name>
        <url-pattern>/_ah/xmpp/presence/unavailable/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>remote_api</servlet-name>
        <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remote_api</servlet-name>
        <url-pattern>/_ah/remote_api</url-pattern>
    </servlet-mapping>





    <servlet>
        <servlet-name>valueTask</servlet-name>

        <servlet-class>com.nimbits.server.process.task.ValueTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>valueTask</servlet-name>
        <url-pattern>/task/value</url-pattern>
    </servlet-mapping>



    <!--cron-->

    <servlet>
        <servlet-name>reportCron</servlet-name>
        <servlet-class>com.nimbits.server.process.cron.ReportCron</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reportCron</servlet-name>
        <url-pattern>/cron/reportCron</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orphansCron</servlet-name>
        <servlet-class>com.nimbits.server.process.cron.DeleteOrphanBlobCron</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orphansCron</servlet-name>
        <url-pattern>/cron/orphansCron</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>systemCron</servlet-name>

        <servlet-class>com.nimbits.server.process.cron.SystemCron</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>systemCron</servlet-name>
        <url-pattern>/cron/systemCron</url-pattern>
    </servlet-mapping>


    <!--end cron -->


    <servlet>
        <servlet-name>orphans</servlet-name>
        <servlet-class>com.nimbits.server.process.cron.DeleteOrphanBlobCron</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orphans</servlet-name>
        <url-pattern>/service/orphans</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>time</servlet-name>
        <servlet-class>com.nimbits.server.api.TimeApi</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>time</servlet-name>
        <url-pattern>/service/time</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>WebSocket</servlet-name>
        <servlet-class>com.nimbits.server.socket.SocketEndpoint</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WebSocket</servlet-name>
        <url-pattern>/socket/*</url-pattern>
    </servlet-mapping>


    <!--gwt rpc services -->
    <servlet>
        <servlet-name>com.nimbits EntityService</servlet-name>
        <servlet-class>com.nimbits.server.transaction.entity.service.EntityServiceRpcImpl</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>com.nimbits SettingsService</servlet-name>
        <servlet-class>com.nimbits.server.SettingServiceRpcImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.nimbits ValueService</servlet-name>
        <servlet-class>com.nimbits.server.transaction.value.service.ValueServiceRpcImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>com.nimbits UserService</servlet-name>
        <servlet-class>com.nimbits.server.transaction.user.service.UserServiceRpcImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.nimbits UserService</servlet-name>
        <url-pattern>/nimbits/rpc/userService</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>com.nimbits EntityService</servlet-name>
        <url-pattern>/nimbits/rpc/entityService</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>com.nimbits SettingsService</servlet-name>
        <url-pattern>/nimbits/rpc/settingsService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.nimbits ValueService</servlet-name>
        <url-pattern>/nimbits/rpc/valueService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>com.nimbits XMPPService</servlet-name>
        <servlet-class>com.nimbits.server.XmppRpcServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>com.nimbits XMPPService</servlet-name>
        <url-pattern>/nimbits/rpc/xmppService</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>unavailableApis</servlet-name>
        <servlet-class>com.nimbits.server.api.UnavailableApi</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>unavailableApis</servlet-name>
        <url-pattern>/service/currentvalue</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>unavailableApis</servlet-name>
        <url-pattern>/service/batch</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>unavailableApis</servlet-name>
        <url-pattern>/service/value</url-pattern>
    </servlet-mapping>


